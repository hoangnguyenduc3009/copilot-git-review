{
  "name": "mcp-get-git-diff",
  "displayName": "MCP: Get Git Diff",
  "description": "Send git diff (current vs main) to Copilot Chat with one click",
  "version": "0.0.1",
  "publisher": "harrus",
  "repository": "https://github.com/hoangnguyenduc3009/copilot-git-review",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other", "SCM"],
  "icon": "images/icon.png",
  "activationEvents": ["onCommand:mcp.getGitDiff"],
  "main": "./out/extension.js",

  "contributes": {
    "commands": [
      {
        "command": "mcp.getGitDiff",
        "title": "MCP: Send Git Diff to Copilot Chat",
        "icon": "$(git-branch)"
      }
    ],
    "keybindings": [
      {
        "command": "mcp.getGitDiff",
        "key": "ctrl+alt+d",
        "mac": "cmd+alt+d",
        "when": "editorTextFocus && gitOpenRepositoryCount != 0"
      }
    ],
    "menus": {
      "commandPalette": [
        { "command": "mcp.getGitDiff" }
      ],
      "explorer/context": [
        { "command": "mcp.getGitDiff", "group": "navigation" }
      ],
      "view/title": [
        {
          "command": "mcp.getGitDiff",
          "when": "view == workbench.view.scm",
          "group": "navigation"
        }
      ]
    }
  },

  "scripts": {
    "clean": "rimraf out *.vsix",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "npm run clean && npm run compile && node scripts/generate-icon.js && vsce package",
    "publish": "vsce publish",
    "prebuild": "npm install",
    "prepublishOnly": "npm run build"
  },

  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^18.x",
    "typescript": "^5.3.0",
    "vsce": "^2.15.0",
    "rimraf": "^5.0.0"
  }
}